{
  "ConnectionStrings": {
    /* Username and Password come from KeyVault */
    "PostgresTemplate": "Host=prod-pokemon-db.postgres.database.azure.com;Port=5432;Database=pokemon_portal_db;User Id={userName};Password={password};",
    /* Redis Host and password come from KeyVault */
    "RedisTemplate": "{host}:6380,password={password}=,ssl=True,abortConnect=False",
    "SqlServerTemplate": "Server=tcp:pokemon-portal-prd-db.database.windows.net,1433;Initial Catalog=pokemon-portal-prd-db;Persist Security Info=False;User ID={userName};Password={password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  }
}